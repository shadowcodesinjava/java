<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#323232">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#000000"
        android:gravity="bottom|end"
        android:padding="15dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="48sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_marginTop="20dp">

        <Button android:id="@+id/btnAC" android:text="AC" android:layout_columnWeight="1" android:textColor="#00FF00" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btnDel" android:text="DL" android:layout_columnWeight="1" android:textColor="#00FF00" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btnRem" android:text="%" android:layout_columnWeight="1" android:textColor="#00FF00" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btnDiv" android:text="/" android:layout_columnWeight="1" android:textColor="#00FF00" android:backgroundTint="#282828"/>

        <Button android:id="@+id/btn7" android:text="7" android:layout_columnWeight="1" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btn8" android:text="8" android:layout_columnWeight="1" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btn9" android:text="9" android:layout_columnWeight="1" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btnMult" android:text="*" android:layout_columnWeight="1" android:textColor="#00FF00" android:backgroundTint="#282828"/>

        <Button android:id="@+id/btn4" android:text="4" android:layout_columnWeight="1" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btn5" android:text="5" android:layout_columnWeight="1" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btn6" android:text="6" android:layout_columnWeight="1" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btnMinus" android:text="-" android:layout_columnWeight="1" android:textColor="#00FF00" android:backgroundTint="#282828"/>

        <Button android:id="@+id/btn1" android:text="1" android:layout_columnWeight="1" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btn2" android:text="2" android:layout_columnWeight="1" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btn3" android:text="3" android:layout_columnWeight="1" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btnPlus" android:text="+" android:layout_columnWeight="1" android:textColor="#00FF00" android:backgroundTint="#282828"/>

        <Button android:id="@+id/btn00" android:text="00" android:layout_columnWeight="1" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btn0" android:text="0" android:layout_columnWeight="1" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btnDec" android:text="." android:layout_columnWeight="1" android:backgroundTint="#282828"/>
        <Button android:id="@+id/btnEq" android:text="=" android:layout_columnWeight="1" android:backgroundTint="#FFD700"/>
    </GridLayout>
</LinearLayout>
